<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- put site specific property overrides in this file -->

<configuration>
	<property>
		<name>mapred.job.tracker</name>
		<value>master:4040</value>
	</property>
	
	<property>
		<name>mapred.local.dir</name>
		<value>/usr/lib/hadoop/mapred/local</value>
		<final>true</final>
	</property>
	
	<property>
		<name>mapred.temp.dir</name>
		<value>/usr/lib/hadoop/mapred/temp</value>
		<final>true</final>
	</property>
	
	<property>
		<name>mapred.map.tasks</name>
		<value>80</value>
	</property>
	
	<property>
		<name>mapred.reduce.tasks</name>
		<value>16</value>
	</property>
	
	<property>
		<name>mapred.userlog.retain.hours</name>
		<value>8</value>
	</property>
</configuration>
